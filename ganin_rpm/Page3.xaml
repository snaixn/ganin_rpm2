<Page x:Class="ganin_rpm.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ganin_rpm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 110 0 0">
        <TextBlock Text="Дан целочисленный массив размера N. Назовем серией группу подряд идущих одинаковых элементов, а длиной серии — количество этих элементов (длина серии может быть равна 1). Вывести строку, содержащую длины всех серий исходного массива."
                   TextWrapping="Wrap" FontSize="14" Margin="5" Width="466" TextAlignment="Center"/>
        <TextBox x:Name="InputArrayTextBox" Width="200" Height="30" />
        <Button Content="Показать длины серий" Width="200" Height="30" Click="ShowSeriesLengths_Click" />
        <TextBlock x:Name="ResultTextBlock" />
    </StackPanel>

</Page>
