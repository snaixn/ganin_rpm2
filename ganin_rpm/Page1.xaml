<Page x:Class="ganin_rpm.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ganin_rpm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 110 0 0">
    
        <TextBlock Text="Пользователь вводит шестизначное число, определить: сумма первых 3 десятичных цифр равна ли сумме 3 последних десятичных цифр."
                   TextWrapping="Wrap" FontSize="14" Margin="5" Width="466" TextAlignment="Center"/>

        <TextBox x:Name="InputNumberTextBox" Width="200" Height="30" />
        <Button Content="Проверить сумму" Width="200" Height="30" Click="CheckSum_Click" />
        <TextBlock x:Name="ResultTextBlock" />
    </StackPanel>

</Page>
